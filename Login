public class Login {

	private JFrame frame;
	private JTextField user;
	private JPasswordField pass;
	private JTextField txtDon;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					Login window = new Login();
					window.frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the application.
	 */
	public Login() {
		initialize();
	}

	/**
	 * Initialize the contents of the frame.
	 */
	private void initialize() {
		frame = new JFrame();
		frame.setBackground(new Color(0, 0, 0));
		frame.getContentPane().setBackground(new Color(0, 0, 0));
		
		JPanel panel = new JPanel();
		panel.setForeground(new Color(25, 25, 112));
		panel.setBorder(new MatteBorder(1, 1, 1, 1, (Color) new Color(0, 0, 0)));
		panel.setBackground(new Color(0, 0, 0));
		frame.getContentPane().add(panel, BorderLayout.CENTER);
		panel.setLayout(null);
		
		JLayeredPane panel_1 = new JLayeredPane();
		panel_1.setBounds(296, 12, 1, 1);
		panel.add(panel_1);
		
		JPanel panel_2 = new JPanel();
		panel_2.setBorder(new MatteBorder(1, 1, 1, 1, (Color) Color.WHITE));
		panel_2.setBackground(new Color(0, 0, 0));
		panel_2.setBounds(6, 12, 497, 450);
		panel.add(panel_2);
		panel_2.setLayout(null);
		
		JLabel lblNewLabel = new JLabel("Username");
		lblNewLabel.setBounds(81, 181, 99, 50);
		lblNewLabel.setForeground(new Color(255, 255, 255));
		lblNewLabel.setFont(new Font("Hiragino Mincho ProN", Font.PLAIN, 21));
		panel_2.add(lblNewLabel);
		
		user = new JTextField();
		user.setBounds(192, 181, 202, 36);
		panel_2.add(user);
		user.setColumns(10);
		
		pass = new JPasswordField();
		pass.setBounds(192, 238, 202, 36);
		panel_2.add(pass);
		
		JLabel lblNewLabel_1 = new JLabel("Password");
		lblNewLabel_1.setBounds(81, 245, 99, 27);
		lblNewLabel_1.setForeground(new Color(255, 255, 255));
		lblNewLabel_1.setFont(new Font("Hiragino Mincho ProN", Font.PLAIN, 21));
		panel_2.add(lblNewLabel_1);
		
		txtDon = new JTextField();
		txtDon.setEnabled(false);
		txtDon.setBounds(152, 354, 219, 26);
		txtDon.setFont(new Font("Hiragino Mincho ProN", Font.PLAIN, 16));
		txtDon.setBackground(new Color(0, 0, 0));
		txtDon.setForeground(new Color(255, 255, 255));
		txtDon.setText("Start Your Journey Today");
		panel_2.add(txtDon);
		txtDon.setColumns(10);
		
		JLabel lblNewLabel_3 = new JLabel("Track Your Life with TAB");
		lblNewLabel_3.setBounds(27, 92, 447, 60);
		lblNewLabel_3.setFont(new Font("Hiragino Mincho ProN", Font.PLAIN, 36));
		lblNewLabel_3.setForeground(new Color(255, 255, 255));
		panel_2.add(lblNewLabel_3);
		
		JButton btnNewButton = new JButton("Log In");
		btnNewButton.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				String un = user.getText(); 
		        String pas = pass.getText();
		        if(un.equals("TAB") && pas.equals("123")) {
		            JOptionPane.showMessageDialog(null, "Login Successful");
		        } else {
		            JOptionPane.showMessageDialog(null, "Invalid Username Or Password");
		        }
		    }
		}); // Closes the anonymous ActionListener and actionPerformed correctly
		btnNewButton.setFont(new Font("Hiragino Mincho ProN", Font.PLAIN, 13));
		btnNewButton.setBounds(202, 288, 117, 36);
		btnNewButton.setBackground(Color.WHITE);
		panel_2.add(btnNewButton);
		
		JButton btnNewButton_1 = new JButton("Create An Account");
		btnNewButton_1.setBackground(new Color(254, 255, 255));
		btnNewButton_1.setFont(new Font("Hiragino Mincho ProN", Font.PLAIN, 13));
		btnNewButton_1.setBounds(177, 381, 157, 46);
		panel_2.add(btnNewButton_1);
		
		JPanel panel_3 = new JPanel();
