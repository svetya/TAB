		panel_3.setBackground(new Color(255, 255, 255));
		panel_3.setBounds(16, 12, 497, 469);
		panel.add(panel_3);
		frame.setBounds(100, 100, 517, 509);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
